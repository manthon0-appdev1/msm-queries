<h1>Actor #<%=@the_actor.id%> details</h1>
<%=@roles.count%>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
        <%=@the_actor.dob%>

  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%=@the_actor.image%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@the_actor.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@the_actor.updated_at%>
  </dd>
</dl>


<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
<%@roles.each do |a_role|%>
    <tr>
      <td>
        <%=@list_of_movies.where({:id => a_role.movie_id}).first.title%>
      </td>

      <td>
      <%=@list_of_movies.where({:id => a_role.movie_id}).first.year%>

      </td>

      <td>
      <%=@list_of_directors.where({:id => a_role.movie_id}).first.name%>
      </td>

      <td>
        <%=a_role.name%>
      </td>

      <td>
        <a href="/">
          Show details
        </a>
      </td>
    </tr>
    <%end%>
</table>
